                        <td><a href="#"><a data-toggle="tooltip" href="#" title="Editer"><span class="glyphicon glyphicon-pencil"></span></a></a></td>
                    {% endif %}
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <td class="btn-delete">
                            <a data-toggle="tooltip" href="#" title="Supprimer"><i
                                        class="glyphicon glyphicon-trash"></i></a>
                            <form action="#" method="post">
                                <input type="submit" value=""/>
                                {{ form_rest(form) }}
                            </form>
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}