{# app/Resources/views/admin/users/users.html.twig #}

{% extends 'admin/home.html.twig' %}

{% block content %}
    <div class="container">
        <table class="table table-hover">
            <thead>
            <tr>
                <th rowspan="2">Pseudo</th>
                <th rowspan="2">Email</th>
                <th colspan="2">RÃ´les</th>
