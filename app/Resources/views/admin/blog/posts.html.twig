{# app/Resources/views/admin/blog/posts.html.twig #}

{% extends 'admin/blog/index.html.twig' %}

{% block adminBlogContent %}
    <h1>Articles</h1>
    {% for flash_message in app.session.flashBag.get('info') %}
        <div class="alert alert-success alert-dismissible fade in">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            {{ flash_message }}
        </div>
    {% endfor %}
    <a href="{{ path('post_add') }}">Ajouter un article</a>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Auteur</th>
            <th>Catégorie</th>
            <th>Commentaires</th>
            <th>Date</th>
            <th>Statut</th>
            <th colspan="2"></th>
        <tr>
        </thead>
        <tbody>
        {% for post in listPosts %}
            <tr>
                <td>{{ post.title }}</td>
                <td>{{ post.author }}</td>
                <td>
                    {% if post.category is not null %}{{ post.category.name }}
                    {% else %}Non classé
                    {% endif %}
                </td>
                <td>{{ post.comments | length }}</td>
                <td>{{ post.creationDate | date('d/m/Y') }}</td>
                <td>{{ post.status }}</td>
                {% if is_granted('ROLE_REDACTEUR') %}
                    <td><a href="{{ path('post_edit', {'id': post.id}) }}"><a data-toggle="tooltip" href="#" title="Editer"><span class="glyphicon glyphicon-pencil"></span></a></a></td>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <td class="btn-delete">
                        <a data-toggle="tooltip" href="#" title="Supprimer"><i
                                    class="glyphicon glyphicon-trash"></i></a>
                        <form action="{{ path('delete', {'param': 'Post','id': post.id}) }}" method="post">
                            <input type="submit" value=""/>
                            {{ form_rest(form) }}
                        </form>
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}