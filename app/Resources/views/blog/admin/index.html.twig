{# app/Resources/views/blog/admin/index.html.twig #}

{% extends 'blog/index.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <h1>Articles</h1>
        <a href="{{ path('add') }}">Ajouter un article</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Auteur</th>
                    <th>Cat√©gorie</th>
                    <th>Commentaires</th>
                    <th>Date</th>
                    <th>Statut</th>
                    <th colspan="2"></th>
                <tr>
            </thead>
            <tbody>
                {% for post in listPosts %}
                    <tr>
                        <td>{{ post.title }}</td>
                        <td>{{ post.author }}</td>
                        <td>{{ post.category.name }}</td>
                        <td>{{ post.comments | length }}</td>
                        <td>{{ post.creationDate | date('d/m/Y') }}</td>
                        <td>{{ post.status }}</td>
                        <td><a href="{{ path('edit', {'id': post.id}) }}"><span class="glyphicon glyphicon-pencil"></span></a></td>
                        <td><a href="#"><span class="glyphicon glyphicon-remove"></span></a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}