<div class="row">
    <ul class="list-inline text-center">
        {% for category in categories %}
            <li><a href="{{ path('category', { 'slug': category.slug, 'page': 1 }) }}" title="">{{ category.name }}</a></li>
        {% endfor %}
        {% if is_granted('ROLE_ADMIN') %}
            <li><a href="{{ path('add') }}" title="">Créer un nouveau post</a></li>
        {% endif %}
    </ul>
    <!--<input type="text" placeholder="Recherche dans cette catégorie">-->
</div>
