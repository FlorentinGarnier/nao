{# app/Resources/views/blog/navigation_blog.html.twig #}

<div class="row text-center">
    <ul id="nav" class="list-inline">
        {% for category in categories %}
            <li><a href="{{ path('category', {'slug': category.slug}) }}" title="">{{ category.name }}</a></li>
        {% endfor %}
        {% if is_granted('ROLE_ADMIN') %}
            <li><a href="{{ path('add') }}" title="">Cr√©er un nouveau post</a></li>
        {% endif %}
    </ul>
    {{ render(controller('GsquadBlogBundle:AdminBlog:searchBarBlog')) }}
</div>
